{
  "name": "jared87/blizzard-api-service",
  "description": "Access wrapper for the Blizzard BattleNet API",
  "url": "https://github.com/Jared87/BlizzardAPI",
  "keywords": ["api","blizzard", "world of warcraft", "diablo3", "starcraft2"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Jared Falkenhagen",
      "email": "jared@falkenhagen.de",
      "homepage": "https://jar3d.de",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4" : {
      "BlizzardApiService\\" : "src"
    }
  },
  "require": {
    "php": ">=7.1",
    "guzzlehttp/guzzle": "^6.0",
    "league/oauth2-client": "^2.3"
  },
  "autoload-dev": {
    "psr-4": {
      "BlizzardApiService\\Tests\\": "tests"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.1",
    "phpmd/phpmd": "^2.6",
    "squizlabs/php_codesniffer": "^3.3",
    "satooshi/php-coveralls": "dev-master"
  }
}